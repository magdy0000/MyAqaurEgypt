<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_favourite_LL"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_of_favourite_list"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:layout_height="120dp"  />

    <RelativeLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/text_of_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="abdjbskjbdb"
            android:textColor="#000"
            android:textSize="17sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:numStars="5"
            android:layout_below="@+id/text_of_favourite"
            android:rating="3"
            android:layout_marginTop="10dp"
            android:stepSize="1" />




        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/like_btn_of_favourite_list"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@null"
            android:textColor="#C91919"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:gravity="right|bottom"
            android:textStyle="bold"
          android:text="Remove"

            android:textAllCaps="false"
            />


</RelativeLayout>
</LinearLayout>