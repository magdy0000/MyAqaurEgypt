<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@null">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="Account Settings"
               android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText

                android:id="@+id/edit_info_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_ground_edit_text"
                android:gravity="center"
                android:inputType="textPersonName"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_ground_edit_text"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_info_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_jopTitle"
                android:background="@drawable/back_ground_edit_text"
                android:gravity="center"
                android:inputType="textEmailAddress" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_info_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_Email"
                android:background="@drawable/back_ground_edit_text"
                android:gravity="center"
                android:hint="Enter new password"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_info_jopTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_ground_edit_text"
                android:gravity="center"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/submit_BT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_ground_regist_button"
                android:text="Submit"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:textColor="#fff" />



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>