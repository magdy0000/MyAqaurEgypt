<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/parentOfTermesAndPolicies"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:context="com.inventure.myaquaregypt.Activity.TermsAndPoliciesActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#000"
            android:text="Terms and policies"
            android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/name_of_terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="18dp"
        android:text="Terms and policies"
        android:textSize="17sp"


        android:textColor="@color/Red" />

    <TextView
        android:id="@+id/text_of_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:textColor="#000" />

</LinearLayout>

</ScrollView>