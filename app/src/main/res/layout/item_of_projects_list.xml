<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >

    <ImageView
        android:id="@+id/image_of_favourite_list"
        android:layout_width="170dp"
        android:scaleType="centerCrop"
        android:layout_height="170dp" />

    <TextView
        android:id="@+id/name_project_of_favourit_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="uguhgigig"
        android:layout_toEndOf="@+id/image_of_favourite_list" />
    <LinearLayout
       android:layout_toEndOf="@+id/image_of_favourite_list"
        android:layout_below="@+id/name_project_of_favourit_list"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/location_project_of_favourite_list"
            android:layout_gravity="center"
            android:text="ihihihiohohohi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:visibility="visible"
        android:id="@+id/footer"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-12dp"
            android:src="@drawable/graytriangle"
            />
        <RelativeLayout

            android:background="#C5C3C3"
             android:layout_below="@+id/triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_margin="15dp"
                android:id="@+id/apartment"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apartment"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_below="@+id/apartment"
                android:id="@+id/villa"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="villa"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/twinhouse"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twin House"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twinhouse"
                android:textSize="18sp"
                android:text="Stand Alone"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twinhouse"
                android:textSize="18sp"
                android:text="Town House"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:text="Stand Alone"

                />



        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>