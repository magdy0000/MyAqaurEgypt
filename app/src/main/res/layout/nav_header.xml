<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_headerLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/Red"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_header_profile_IV"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:src="@drawable/myaquarsplashlogo"
            android:visibility="visible" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_profile_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="ALEX JOHAN"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/nav_header_profile_email_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="abdalla167osman@gamil.com"
                android:textColor="#fff"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>